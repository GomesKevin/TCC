@using IdentityServer4.Extensions
@model List<ProdutoViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @{
                if (Model != null)
                {
                    @foreach (var produto in Model)
                    {
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src="@produto.CaminhoImagem" alt="@produto.Descricao" />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@produto.Descricao</h5>
                                        <!-- Product price-->
                                @produto.Valor.ToString("C2")
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <input type="hidden" name="Descricao" value="@produto.Descricao" />
                                    <input type="hidden" name="Valor" value="@produto.Valor" />
                                    <div class="text-center">
                                        <button type="button" class="btn btn-outline-dark mt-auto" onclick="adicionarItem(@produto.Codigo)">Adicionar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            }
        </div>
    </div>
</section>

<div id="mensagem" class="alert" style="display: none;"></div>
